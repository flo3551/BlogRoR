
<h4 class="mt-4">Articles lists <span class="badge badge-secondary"><%= @articles.count %> Articles</span></h4>
<%- @articles.each do |article| %>
	<div class="card mt-4">
		<div class="card-header">
	    	<h3><%= article.title %></h3>
	    </div>
	    <div class="card-body">
			<p>
				<span><img style="height: 75px; width: auto" src="<%= article.image %>"></span>
				<span><%= article.header %></span>
			</p>
			<p>Published on <%= article.date %> by <%= article.author %></p>
			<li class="btn btn-light"><%= link_to "Read more..", article_path(article) %></li>
			<hr>
		</div>
	</div>
<%- end %>	
<li class="mt-3 btn btn-success"><%= link_to "New article", new_article_path %></li>


