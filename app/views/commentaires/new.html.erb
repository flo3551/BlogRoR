<h1>New Commentaire</h1>

<%= form_for @commentaire, url: [@article, @commentaire] do |f| %>
	<p>
	    <%= f.label "pseudo" %><br>		
		<%= f.text_field "pseudo", class: 'form-control' %>
	</p>

	<p>
	    <%= f.label "body" %><br>		
		<%= f.text_field "body", class: 'form-control' %>
	</p>
	<%= f.submit %>
<% end %>
<%=	@commentaire.errors.messages %>
